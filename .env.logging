# Configuração de Logging Otimizada para ZMeow

# Nível de log principal (trace, debug, info, warn, error, fatal, panic)
# Para desenvolvimento: debug
# Para produção: info
LOG_LEVEL=info

# Output do log (dual, console, file, stdout, stderr)
LOG_OUTPUT=dual

# Formato do console (console para colorido, json para estruturado)
LOG_CONSOLE_FORMAT=console

# Formato do arquivo (sempre json para análise)
LOG_FILE_FORMAT=json

# Configurações de arquivo
LOG_FILE_PATH=logs/zmeow.log
LOG_FILE_MAX_SIZE=100
LOG_FILE_MAX_BACKUPS=3
LOG_FILE_MAX_AGE=28
LOG_FILE_COMPRESS=true

# Cores no console (true/false)
LOG_CONSOLE_COLORS=true

# Configurações contextuais
APP_NAME=zmeow
APP_ENV=development
APP_VERSION=1.0.0
SERVICE_NAME=whatsapp-api

# Configurações avançadas
LOG_ENABLE_CALLER=true
LOG_ENABLE_STACK_TRACE=false
LOG_ENABLE_SAMPLING=false
LOG_SAMPLE_RATE=10
LOG_ENABLE_METRICS=false

# Configurações específicas para reduzir verbosidade

# Database logging
# - Queries rápidas (< 10ms) e rotineiras só aparecem em TRACE
# - Queries normais (10-100ms) aparecem em DEBUG resumido
# - Queries lentas (> 100ms) aparecem como WARNING com query completa
# - Erros sempre aparecem como ERROR com detalhes completos

# WhatsApp logging
# - Eventos de conexão: INFO
# - Mensagens recebidas/enviadas: INFO
# - Eventos de debug: DEBUG
# - Payloads brutos: TRACE

# HTTP logging
# - Requests normais (< 500ms): DEBUG
# - Requests lentos (> 500ms): WARN
# - Erros 4xx: WARN
# - Erros 5xx: ERROR
